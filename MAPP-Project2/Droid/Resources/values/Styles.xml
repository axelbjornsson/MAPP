<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">@color/lightgray</item>
        <item name="android:colorAccent">@color/pink</item>
	</style>
	<style name="MyTheme.Splash" parent ="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/Splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>
	<style name="MyTheme.Toolbar" parent ="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/lightgray</item>
        <item name="android:colorAccent">@color/pink</item>
    </style>
	<style name="MyTheme.Tabs" parent ="Base.Widget.Design.TabLayout">
    </style>
</resources>